@model List<Author>
@{
	ViewData["Title"] = "Home Page";
}
<div class="row">
	<div class="col-xs-12">
		<h2>Authors</h2>
		@if(Model.Count > 0) {
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Id</th>
					<th>Articles</th>
					<th></th>
				</tr>
			</thead>
			
			@foreach(var author in Model) {
			<tr>
				<td>
					<a asp-controller="Author" asp-action="Details" asp-all-route-data='@new Dictionary<string, string>{{"id", author.Id.ToString()}};'>@author.Name</a>
				</td>
				<td>@author.Id</td>
				<td>@if(author.Articles != null){<span>@author.Articles.Count</span>}else{<span>0</span>}</td>
				<td>
					<a asp-controller="Author" asp-action="Edit" asp-all-route-data='@new Dictionary<string, string>{{"id", author.Id.ToString()}};'>Edit</a>
				</td>
			</tr>
			}
			<tr>
				<td colspan="99" style="padding-top:20px;">
					<a asp-controller="Author" asp-action="Edit"><span class="glyphicon glyphicon-plus"></span> Create new author</a>
				</td>
			</tr>
		</table>
		} else {
			<p>There are no authors yet</p>
			<p>
				<a asp-controller="Author" asp-action="Edit"><span class="glyphicon glyphicon-plus"></span> Create new author</a>
			</p>
		}

	</div>
</div>
