@model List<Article>
@{
	ViewData["Title"] = "Home Page";
}

<div class="row">
	<div class="col-xs-12">
		<h2>Articles</h2>
		@if(Model.Count > 0) {
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Title</th>
					<th>Author</th>
					<th>Tags</th>
					<th>Published</th>
					<th>Id</th>
					<th></th>
				</tr>
			</thead>
			
			@foreach(var article in Model) {
			<tr>
				<td>
					@*<a asp-controller="Article" asp-action="" asp-all-route-data='@new Dictionary<string, string>{{"id", article.Id.ToString()}};'>@article.Title</a>*@
					<a href="/article/@article.Id">@article.Title</a>
				</td>
				<td>@article.Author.Name</td>
				<td>@article.TagsForDisplay()</td>
				<td>@article.Date</td>
				<td>@article.Id</td>
				<td>
					<a asp-controller="Article" asp-action="Edit" asp-all-route-data='@new Dictionary<string, string>{{"id", article.Id.ToString()}};'>Edit</a>
				</td>
			</tr>
			}
			<tr>
				<td colspan="99" style="padding-top:20px;"><a asp-controller="Article" asp-action="Edit"><span class="glyphicon glyphicon-plus"></span> Create new article</a></td>
			</tr>
		</table>
		} else {
			<p>There are no articles yet</p>
			<p>
				<a asp-controller="Article" asp-action="Edit"><span class="glyphicon glyphicon-plus"></span> Create new article</a>
			</p>
		}

	</div>
</div>
